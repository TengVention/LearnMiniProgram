<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动：scroll-x -->
<scroll-view scroll-x class="container1">
  <view wx:for="{{10}}" class="item1">{{item}}</view>
</scroll-view>
<!-- 2.垂直滚动：scroll-y -->
<scroll-view scroll-y 
             class="container2"
             bindscroll="handleScroll">
  <view wx:for="{{10}}" class="item2">{{item}}</view>
</scroll-view>
