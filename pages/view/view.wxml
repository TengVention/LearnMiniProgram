<!--pages/view/view.wxml-->

<!-- 1.view的基本使用 -->
<view class="box">哈哈哈</view>
<view class="box1" hover-class="hover-view">呵呵呵</view>

<!-- hover-stop-propagation 阻止祖先节点出现点击态 -->
<view class="box2" hover-class="box2-hover">
  <view class="box1" 
        hover-class="hover-view"
        hover-stay-time="{{0}}"
        hover-stop-propagation="1">
    box1
  </view>
</view>
